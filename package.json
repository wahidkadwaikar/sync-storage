{
  "name": "sync-storage",
  "version": "0.1.0",
  "private": true,
  "description": "Multi-adapter remote key-value sync storage",
  "type": "module",
  "packageManager": "pnpm@9.15.3",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "pnpm -r build",
    "lint": "eslint . --ext .ts,.mts,.cts,.js,.mjs,.cjs --max-warnings=0",
    "lint:fix": "eslint . --ext .ts,.mts,.cts,.js,.mjs,.cjs --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "dev": "pnpm --filter @sync-storage/api dev",
    "start": "pnpm --filter @sync-storage/api start",
    "deploy:fly": "node ./scripts/deploy-fly.mjs",
    "smoke": "node ./scripts/smoke-test.mjs"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/node": "^22.13.8",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.42.0",
    "vitest": "^3.0.8"
  }
}
